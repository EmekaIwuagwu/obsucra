# ============================================================================
# OBSCURA ORACLE - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your values

# ============================================================================
# RPC ENDPOINTS (Get from Alchemy, Infura, or QuickNode)
# ============================================================================

# Ethereum Sepolia (Primary Testnet)
ETHEREUM_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
ETHEREUM_WS_URL=wss://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Base Sepolia (L2)
BASE_RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
BASE_WS_URL=wss://base-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Arbitrum Sepolia (L2)
ARBITRUM_RPC_URL=https://arb-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
ARBITRUM_WS_URL=wss://arb-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Optimism Sepolia (L2)
OPTIMISM_RPC_URL=https://opt-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
OPTIMISM_WS_URL=wss://opt-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Solana Devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# Legacy support (for existing configs)
RPC_URL=wss://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
CHAIN_ID=11155111

# ============================================================================
# SMART CONTRACT ADDRESSES
# ============================================================================

# Sepolia Contracts (update after deployment)
ORACLE_ADDRESS=0x0000000000000000000000000000000000000000
STAKE_GUARD_ADDRESS=0x0000000000000000000000000000000000000000
TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
NODE_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000

# Legacy (for existing configs)
STAKING_ADDRESS=0x0000000000000000000000000000000000000000

# ============================================================================
# NODE CONFIGURATION
# ============================================================================

# Private key for the oracle node (NO 0x prefix)
# SECURITY: Never commit real keys! Use environment variables in production
NODE_PRIVATE_KEY=your_private_key_without_0x_prefix

# Node HTTP port
NODE_PORT=8080
OBSCURA_PORT=8080

# Log level (debug, info, warn, error)
LOG_LEVEL=info
OBSCURA_LOG_LEVEL=info

# Enable telemetry metrics
OBSCURA_TELEMETRY_MODE=true

# Database path
OBSCURA_DB_PATH=./data/node.db.json

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# MAD outlier detection threshold
ANOMALY_THRESHOLD=2.5

# Circuit breaker deviation threshold (percentage)
CIRCUIT_BREAKER_THRESHOLD=10

# ============================================================================
# MONITORING (Optional)
# ============================================================================

# Grafana admin password
GRAFANA_PASSWORD=admin

# Slack webhook for alerts
SLACK_WEBHOOK_URL=

# PagerDuty service key
PAGERDUTY_SERVICE_KEY=

# ============================================================================
# BLOCK EXPLORER API KEYS (For contract verification)
# ============================================================================

ETHERSCAN_API_KEY=your_etherscan_api_key
BASESCAN_API_KEY=your_basescan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key
OPTIMISM_ETHERSCAN_API_KEY=your_optimism_api_key

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# Backend API URL (for frontend)
VITE_API_URL=http://localhost:8080
VITE_WS_URL=ws://localhost:8080/ws

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# Domain for SSL/TLS
DOMAIN=yourdomain.com

# Cloudflare API token (for DNS challenges)
CLOUDFLARE_API_TOKEN=
